<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/app_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="36dp"
        android:textStyle="bold"
        android:text="soundVox"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_label"
        app:layout_constraintBottom_toTopOf="@id/goback_container"
        >
        <LinearLayout
            android:id="@+id/profile_list_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/menu_item_1_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Record through microphone"
                android:textAlignment="textStart"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/menu_item_2_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Upload sound"
                android:textAlignment="textStart"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/menu_item_3_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Open sound folder"
                android:textAlignment="textStart"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/menu_item_4_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Create a new profile"
                android:textAlignment="textStart"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/menu_item_5_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Delete profile"
                android:textAlignment="textStart"/>


        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/goback_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/goback_btn"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="back_btn"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/goback_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="Go Back"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>